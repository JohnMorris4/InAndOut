@model IEnumerable<InAndOut.Models.MyExpenses>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Expenses" asp-action="Create">Create New Item</a>
            
        </div>
    </div>
    
    <br>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>Expense Name</th>
                <th>Expense Cost</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@item.ExpenseName</td>
                    <td width="50%">$ @item.ExpenseCost</td>
                    
                </tr>
            }
            
            </tbody>
        </table>
    }
    else
    {
        <p>
            No Items to create
        </p>
    }
    
</div>